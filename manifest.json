{
  "manifest_version": 3,
  "name": "CopyCat üê±",
  "version": "1.0.0",
  "description": "Stealth AI Assistant: Alt+C captures ALL page text, Alt+V types human-like responses. Undetectable.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage", 
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "commands": {
    "copycat_copy": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "üîç Capture and analyze page content"
    },
    "copycat_paste": {
      "suggested_key": {
        "default": "Alt+V"
      },
      "description": "‚å®Ô∏è Type AI response like human"
    },
    "toggle_typing_pause": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "‚è∏Ô∏è Toggle typing pause/play"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
